@{
    ViewBag.Title = "Home Page";
}

@using TeenCodeWebsite.Models

<style>
    .row{
        padding-top: 50px;
    }

    h1{
        padding-bottom: 40px;
    }

    
</style>


<body style="padding-top:100px;">
    <div class="container">
        <div class="row col-md-12">
            <div  class="jumbotron text-center" >
                        <h1> Welcome to TeenCode!</h1><br />
                    <p id="welcome">
                        TeenCode aims to help people who are new to programming to<br />
                        start learning how to code easily through video tutorials.<br />
                        <b>Click the video below to see an example.</b>
                    </p>
            </div>
        </div>
    </div>
           
        <div class="row">
               <div style="padding-top:100px;" id="video" class="col-md-12">
                   <iframe width="100%" height="480" src="https://www.youtube.com/embed/Fi3zwQaFe2k" frameborder="3"></iframe>
               </div>
           </div>
           
    
         <div class="row">
             <div style="text-align:center" id="cta" class="col-md-12">
                 <h1>Start Learning Now!</h1>
                 <button class="btn btn-primary btn-lg">
                    <a href="https://www.youtube.com/channel/UCY8oaqFgQnr7WkDe1n8n2DA">Take Me There</a>
                 </button>
             </div>
         </div>

        <div class="row">
            <div class="col-md-12" style="background-color: lightgoldenrodyellow; padding-top: 20px;">
                @using (ApplicationDbContext ctx = new ApplicationDbContext())
                {
                    foreach (var item in ctx.SMLinks)
                    {
                        <div class="col-md-4 text-center">
                            <a href="@item.PageUrl">
                                <img width="128px" height="128px" src="@item.ImageUrl" />
                            </a>

                            <p>@item.Name</p>
                        </div>
                    }
                }
            </div>
        </div>
     </div>
</body>